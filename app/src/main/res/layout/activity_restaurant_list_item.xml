<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="4dp">
        <ImageView
            android:src="@drawable/restaurant_thumbnail"
            android:id="@+id/restaurant_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />
    </android.support.v7.widget.CardView>

    <LinearLayout android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="10dp">
        <!--android:layout_gravity="center"-->

        <TextView android:text="MingHin Cuisine"
            android:id="@+id/restaurant_name"
            android:textColor="@android:color/black"
            android:layout_marginBottom="5dp"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:textSize="19sp" />
        <!--android:textStyle="bold"
        android:textColor="@android:color/black"-->

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/Widget.DeviceDefault.RatingBar.Small"
            android:isIndicator="true"
            android:id="@+id/restaurant_rating_bar"
            android:visibility="gone" />

        <ImageView android:id="@+id/restaurant_rating"
            android:layout_width="100dp"
            android:layout_height="25dp" />

        <TextView  android:text="Seafood, Dim Sum, Cantonese"
            android:id="@+id/restaurant_type"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp" />

        <TextView
            android:text="2168 S Archer Ave, Chicago, IL 60616"
            android:id="@+id/restaurant_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>
